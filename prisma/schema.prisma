// 47 Industries E-Commerce Platform - Database Schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

// Note: DATABASE_URL should be constructed from Railway's individual MySQL variables:
// mysql://${MYSQLUSER}:${MYSQLPASSWORD}@${MYSQLHOST}:${MYSQLPORT}/${MYSQLDATABASE}

// ============================================
// AUTHENTICATION & USER MANAGEMENT
// ============================================

enum Role {
  CUSTOMER
  ADMIN
  SUPER_ADMIN
}

model User {
  id            String    @id @default(cuid())
  username      String?   @unique
  email         String?   @unique
  name          String?
  password      String?
  image         String?
  role          Role      @default(CUSTOMER)
  emailVerified DateTime?

  // Recovery/backup email for admins
  backupEmail   String?

  // Admin Permissions (JSON array of permission strings)
  // e.g., ["products", "orders", "users", "settings", "email"]
  permissions   Json?

  // Email Access (JSON array of email addresses the user can access)
  // e.g., ["support@47industries.com", "sales@47industries.com"]
  emailAccess   Json?

  // Zoho Mail Integration
  zohoAccessToken   String?   @db.Text
  zohoRefreshToken  String?   @db.Text
  zohoTokenExpiry   DateTime?

  // Relations
  accounts      Account[]
  sessions      Session[]
  orders        Order[]
  cartItems     CartItem[]
  addresses     Address[]
  emailLogs     EmailLog[]
  blogPosts     BlogPost[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([username])
  @@index([email])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// E-COMMERCE - PRODUCTS & CATEGORIES
// ============================================

enum ProductType {
  PHYSICAL
  DIGITAL
}

model Category {
  id          String      @id @default(cuid())
  name        String
  slug        String      @unique
  description String?     @db.Text
  image       String?
  productType ProductType @default(PHYSICAL)  // Categories are either for digital or physical products
  parentId    String?
  parent      Category?   @relation("CategoryToCategory", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  children    Category[]  @relation("CategoryToCategory")
  products    Product[]
  active      Boolean     @default(true)

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([slug])
  @@index([parentId])
  @@index([productType])
}

model Product {
  id            String       @id @default(cuid())
  name          String
  slug          String       @unique
  description   String       @db.Text
  shortDesc     String?      @db.VarChar(500)
  price         Decimal      @db.Decimal(10, 2)
  comparePrice  Decimal?     @db.Decimal(10, 2)
  costPrice     Decimal?     @db.Decimal(10, 2)
  images        Json         // Array of image URLs
  categoryId    String
  category      Category     @relation(fields: [categoryId], references: [id])
  stock         Int          @default(0)
  sku           String?      @unique
  tags          Json?        // Array of tags
  featured      Boolean      @default(false)
  active        Boolean      @default(true)

  // Product Type
  productType   ProductType  @default(PHYSICAL)

  // Link to alternate version (physical <-> digital)
  linkedProductId  String?   // ID of the physical or digital counterpart

  // Physical Product Fields
  weight        Decimal?     @db.Decimal(10, 2)
  dimensions    String?
  requiresShipping Boolean   @default(true)

  // Digital Product Fields
  digitalFileUrl   String?   @db.Text  // R2 URL for the downloadable file
  digitalFileName  String?             // Original filename for display
  digitalFileSize  Int?                // File size in bytes
  downloadLimit    Int?      @default(5)  // Max downloads per purchase (null = unlimited)
  downloadExpiry   Int?      @default(30) // Days until download link expires (null = never)

  // 3D Printing specific (for physical 3D printed products)
  material      String?
  printTime     Int?         // in minutes
  layerHeight   Decimal?     @db.Decimal(5, 3)
  infill        Int?         // percentage

  // Relations
  orderItems    OrderItem[]
  cartItems     CartItem[]
  reviews       Review[]
  digitalDownloads DigitalDownload[]
  inventoryAlerts  InventoryAlert[]
  stockMovements   StockMovement[]
  variants      ProductVariant[]

  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@index([slug])
  @@index([categoryId])
  @@index([sku])
  @@index([featured])
  @@index([productType])
}

// Product Variants (e.g., Size: Large, Color: Blue)
model ProductVariant {
  id          String   @id @default(cuid())
  productId   String
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  name        String   // Generated name like "Large / Blue"
  sku         String?  @unique
  price       Decimal  @db.Decimal(10, 2)
  comparePrice Decimal? @db.Decimal(10, 2)
  stock       Int      @default(0)

  // Options as JSON: { "Size": "Large", "Color": "Blue" }
  options     Json

  // Media
  image       String?

  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([productId])
  @@index([sku])
}

// Product Option Types (e.g., Size, Color, Material)
model ProductOptionType {
  id          String   @id @default(cuid())
  name        String   @unique  // "Size", "Color", "Material"

  // Available values as JSON array: ["S", "M", "L", "XL"]
  values      Json

  sortOrder   Int      @default(0)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Track digital product downloads
model DigitalDownload {
  id            String   @id @default(cuid())
  productId     String
  product       Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  orderId       String
  orderItemId   String

  // Download tracking
  downloadToken String   @unique  // Unique token for download URL
  downloadCount Int      @default(0)
  maxDownloads  Int?     // Copied from product at purchase time
  expiresAt     DateTime?

  // Customer info
  customerEmail String

  createdAt     DateTime @default(now())
  lastDownloadAt DateTime?

  @@index([productId])
  @@index([orderId])
  @@index([downloadToken])
  @@index([customerEmail])
}

// ============================================
// SHOPPING CART
// ============================================

model CartItem {
  id         String   @id @default(cuid())
  userId     String?
  user       User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId  String
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  quantity   Int      @default(1)
  sessionId  String?

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([userId])
  @@index([productId])
  @@index([sessionId])
}

// ============================================
// ORDERS & CHECKOUT
// ============================================

enum OrderStatus {
  PENDING
  PROCESSING
  PAID
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

enum PaymentStatus {
  PENDING
  PROCESSING
  SUCCEEDED
  FAILED
  REFUNDED
}

model Order {
  id              String        @id @default(cuid())
  orderNumber     String        @unique
  userId          String?
  user            User?         @relation(fields: [userId], references: [id])

  // Customer Info (for guest checkout)
  customerName    String
  customerEmail   String
  customerPhone   String?

  // Pricing
  subtotal        Decimal       @db.Decimal(10, 2)
  tax             Decimal       @db.Decimal(10, 2) @default(0)
  shipping        Decimal       @db.Decimal(10, 2) @default(0)
  discount        Decimal       @db.Decimal(10, 2) @default(0)
  total           Decimal       @db.Decimal(10, 2)

  // Status
  status          OrderStatus   @default(PENDING)
  paymentStatus   PaymentStatus @default(PENDING)

  // Payment
  stripePaymentId String?       @unique
  stripeSessionId String?       @unique

  // Shipping
  shippingAddressId String?
  shippingAddress Address?      @relation(fields: [shippingAddressId], references: [id])
  trackingNumber  String?
  carrier         String?

  // Discount Code
  discountCode    String?

  // Relations
  items           OrderItem[]
  returns         ReturnRequest[]

  // Notes
  customerNotes   String?       @db.Text
  adminNotes      String?       @db.Text

  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([userId])
  @@index([orderNumber])
  @@index([status])
  @@index([stripePaymentId])
  @@index([shippingAddressId])
}

model OrderItem {
  id          String   @id @default(cuid())
  orderId     String
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId   String
  product     Product  @relation(fields: [productId], references: [id])

  name        String
  price       Decimal  @db.Decimal(10, 2)
  quantity    Int
  total       Decimal  @db.Decimal(10, 2)

  // Snapshot of product details at time of order
  image       String?
  sku         String?

  createdAt   DateTime @default(now())

  @@index([orderId])
  @@index([productId])
}

model Address {
  id          String  @id @default(cuid())
  userId      String
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  fullName    String
  company     String?
  address1    String
  address2    String?
  city        String
  state       String
  zipCode     String
  country     String  @default("US")
  phone       String?

  isDefault   Boolean @default(false)

  orders      Order[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}

// ============================================
// DISCOUNT CODES
// ============================================

enum DiscountType {
  PERCENTAGE
  FIXED_AMOUNT
}

model DiscountCode {
  id            String        @id @default(cuid())
  code          String        @unique
  description   String?       @db.Text
  type          DiscountType
  value         Decimal       @db.Decimal(10, 2)
  minPurchase   Decimal?      @db.Decimal(10, 2)
  maxUses       Int?
  usedCount     Int           @default(0)
  active        Boolean       @default(true)
  startsAt      DateTime?
  expiresAt     DateTime?

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([code])
}

// ============================================
// CUSTOM 3D PRINTING REQUESTS
// ============================================

enum CustomRequestStatus {
  PENDING
  REVIEWING
  QUOTED
  APPROVED
  IN_PRODUCTION
  COMPLETED
  CANCELLED
}

model CustomRequest {
  id            String              @id @default(cuid())
  requestNumber String              @unique

  // Customer Info
  name          String
  email         String
  phone         String?
  company       String?

  // File Upload
  fileUrl       String
  fileName      String
  fileSize      Int                 // in bytes

  // Specifications
  material      String
  finish        String
  color         String
  quantity      Int
  dimensions    String?
  scale         Decimal?            @db.Decimal(5, 2)

  // Additional Info
  notes         String?             @db.Text
  deadline      DateTime?

  // Quote
  estimatedPrice Decimal?           @db.Decimal(10, 2)
  estimatedDays  Int?
  quoteNotes     String?            @db.Text
  quotedAt       DateTime?
  quotedBy       String?

  // Status
  status        CustomRequestStatus @default(PENDING)

  // Admin Notes
  adminNotes    String?             @db.Text

  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt

  @@index([email])
  @@index([status])
  @@index([requestNumber])
}

// ============================================
// SERVICE INQUIRIES (Web/App Development)
// ============================================

enum ServiceType {
  WEB_DEVELOPMENT
  APP_DEVELOPMENT
  AI_SOLUTIONS
  CONSULTATION
  OTHER
}

enum InquiryStatus {
  NEW
  CONTACTED
  PROPOSAL_SENT
  NEGOTIATING
  ACCEPTED
  DECLINED
  COMPLETED
}

model ServiceInquiry {
  id            String         @id @default(cuid())
  inquiryNumber String         @unique

  // Customer Info
  name          String
  email         String
  phone         String?
  company       String?
  website       String?

  // Service Details
  serviceType   ServiceType
  budget        String?
  timeline      String?
  description   String         @db.Text

  // Selected Package (optional)
  packageId     String?
  package       ServicePackage? @relation("PackageInquiries", fields: [packageId], references: [id])

  // Attachments
  attachments   Json?

  // Status
  status        InquiryStatus  @default(NEW)

  // Follow-up
  assignedTo    String?
  estimatedCost Decimal?       @db.Decimal(10, 2)
  proposalUrl   String?
  adminNotes    String?        @db.Text

  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([email])
  @@index([status])
  @@index([serviceType])
  @@index([inquiryNumber])
  @@index([packageId])
}

// ============================================
// SERVICE PACKAGES & PRICING
// ============================================

enum ServiceCategory {
  WEB_DEVELOPMENT      // Websites, web apps, e-commerce
  IOS_APP              // Native iOS applications
  ANDROID_APP          // Native Android applications
  CROSS_PLATFORM_APP   // React Native, Flutter (iOS + Android)
  DESKTOP_APP          // Windows, macOS, Linux apps
  THREE_D_PRINTING     // 3D printing services
}

model ServicePackage {
  id            String          @id @default(cuid())
  name          String          // "Starter", "Professional", "Enterprise"
  slug          String          @unique
  category      ServiceCategory

  // Pricing
  price         Decimal?        @db.Decimal(10, 2) // null = "Custom Quote"
  priceDisplay  String?         // "Starting at $2,500" or "Custom"
  billingType   String          @default("one_time") // one_time, monthly, yearly
  priceNote     String?         // Additional pricing context

  // Description
  shortDesc     String          @db.VarChar(500)
  description   String          @db.Text

  // Features (JSON array of feature strings)
  features      Json

  // What's Included (detailed breakdown)
  includes      Json?           // [{title: "Design", items: ["Custom UI", "Responsive"]}]

  // Technical Details (for apps)
  platforms     Json?           // ["iOS", "Android", "Web", "Windows", "macOS"]
  techStack     Json?           // ["React Native", "Node.js", "PostgreSQL"]
  integrations  Json?           // ["Stripe", "Firebase", "AWS"]

  // Deliverables
  deliverables  Json?           // ["Source code", "Documentation", "Design files"]

  // Support & Maintenance
  supportIncluded   String?     // "30 days", "3 months", etc.
  revisionRounds    Int?        // Number of revision rounds included

  // Display
  isPopular     Boolean         @default(false)
  isActive      Boolean         @default(true)
  sortOrder     Int             @default(0)
  badge         String?         // "Best Value", "Most Popular", "Enterprise"

  // Timing
  estimatedDays Int?            // Estimated delivery time
  estimatedWeeks Int?           // Alternative: weeks estimate

  // Relations
  inquiries     ServiceInquiry[] @relation("PackageInquiries")

  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@index([category])
  @@index([isActive])
  @@index([slug])
}

model ServiceFeature {
  id            String          @id @default(cuid())
  name          String
  description   String?         @db.Text
  icon          String?         // Icon name or URL
  category      ServiceCategory
  sortOrder     Int             @default(0)
  isActive      Boolean         @default(true)

  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@index([category])
}

model ServiceProject {
  id            String          @id @default(cuid())
  title         String
  slug          String          @unique
  category      ServiceCategory // Primary category (kept for backwards compatibility)
  categories    Json?           // Array of category strings for multi-category projects

  // Client info
  clientName    String
  clientLogo    String?

  // Project details
  description   String          @db.Text
  challenge     String?         @db.Text
  solution      String?         @db.Text
  results       String?         @db.Text

  // Media
  thumbnailUrl  String?
  images        Json?           // Array of image URLs
  videoUrl      String?
  liveUrl       String?         // Link to live project

  // Tech stack used
  technologies  Json?           // Array of tech names

  // Testimonial
  testimonial   String?         @db.Text
  testimonialAuthor String?
  testimonialRole   String?

  // Display
  isFeatured    Boolean         @default(false)
  showInNavbar  Boolean         @default(false)  // Show in site navigation header
  isActive      Boolean         @default(true)
  sortOrder     Int             @default(0)

  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@index([category])
  @@index([isFeatured])
  @@index([showInNavbar])
  @@index([slug])
}

// ============================================
// CUSTOMER MANAGEMENT
// ============================================

model CustomerNote {
  id          String   @id @default(cuid())
  userId      String
  authorId    String   // Admin who created the note
  authorName  String   // Snapshot of admin name

  content     String   @db.Text
  isPinned    Boolean  @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([authorId])
}

model CustomerSegment {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?  @db.Text
  color       String   @default("#3b82f6") // For UI display

  // Conditions (JSON) - rules for auto-assignment
  // e.g., {"minOrders": 5, "minSpent": 500}
  conditions  Json?
  isAutomatic Boolean  @default(false) // Auto-assign based on conditions

  // Manual members
  memberIds   Json?    // Array of user IDs

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ============================================
// NOTIFICATIONS & ACTIVITY
// ============================================

enum NotificationType {
  ORDER_NEW
  ORDER_STATUS
  ORDER_REFUND
  INVENTORY_LOW
  INVENTORY_OUT
  CUSTOM_REQUEST
  SERVICE_INQUIRY
  REVIEW_NEW
  USER_SIGNUP
  SYSTEM
}

model Notification {
  id          String           @id @default(cuid())
  type        NotificationType
  title       String
  message     String           @db.Text
  link        String?          // URL to relevant page

  // Targeting
  userId      String?          // Specific user, or null for all admins
  isRead      Boolean          @default(false)
  readAt      DateTime?

  // Metadata
  metadata    Json?            // Additional data (orderId, productId, etc.)

  createdAt   DateTime         @default(now())

  @@index([userId])
  @@index([isRead])
  @@index([type])
  @@index([createdAt])
}

model ActivityLog {
  id          String   @id @default(cuid())
  userId      String
  userName    String   // Snapshot

  action      String   // "created", "updated", "deleted", "viewed"
  entityType  String   // "order", "product", "user", etc.
  entityId    String?
  entityName  String?  // Human readable name

  details     Json?    // What changed
  ipAddress   String?
  userAgent   String?  @db.Text

  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([entityType])
  @@index([createdAt])
}

// ============================================
// INVENTORY MANAGEMENT
// ============================================

model InventoryAlert {
  id          String   @id @default(cuid())
  productId   String
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  type        String   // "LOW_STOCK", "OUT_OF_STOCK", "OVERSTOCK"
  threshold   Int      // Stock level that triggered alert

  isResolved  Boolean  @default(false)
  resolvedAt  DateTime?
  resolvedBy  String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([productId, type])
  @@index([productId])
  @@index([isResolved])
  @@index([type])
}

model StockMovement {
  id          String   @id @default(cuid())
  productId   String
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  type        String   // "IN", "OUT", "ADJUSTMENT"
  quantity    Int      // Positive for in, negative for out

  reason      String?  @db.Text
  orderId     String?  // If related to an order
  userId      String?  // Who made the change
  userName    String?

  createdAt   DateTime @default(now())

  @@index([productId])
  @@index([type])
  @@index([createdAt])
}

// ============================================
// RETURNS & RMA
// ============================================

enum ReturnStatus {
  REQUESTED
  APPROVED
  REJECTED
  SHIPPED
  RECEIVED
  REFUNDED
  COMPLETED
}

enum ReturnReason {
  DEFECTIVE
  WRONG_ITEM
  NOT_AS_DESCRIBED
  CHANGED_MIND
  DAMAGED_SHIPPING
  OTHER
}

model ReturnRequest {
  id            String       @id @default(cuid())
  orderId       String
  order         Order        @relation(fields: [orderId], references: [id])

  // Items being returned
  items         Json         // [{productId, productName, quantity, reason}]

  // Reason
  reason        String       @default("OTHER") // Maps to ReturnReason enum values
  notes         String?      @db.Text

  // Resolution
  status        String       @default("PENDING") // PENDING, APPROVED, REJECTED, RECEIVED, REFUNDED, COMPLETED
  refundAmount  Decimal?     @db.Decimal(10, 2)

  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@index([orderId])
  @@index([status])
}

// ============================================
// MARKETING & CAMPAIGNS
// ============================================

model EmailCampaign {
  id            String   @id @default(cuid())
  name          String
  subject       String
  content       String   @db.LongText // HTML content

  // Targeting
  segmentId     String?  // CustomerSegment ID
  recipientType String   @default("all") // "all", "segment", "manual"
  recipientIds  Json?    // Manual list of user IDs

  // Schedule
  scheduledAt   DateTime?
  sentAt        DateTime?

  // Stats
  totalRecipients Int    @default(0)
  sentCount       Int    @default(0)
  openCount       Int    @default(0)
  clickCount      Int    @default(0)

  status        String   @default("draft") // draft, scheduled, sending, sent

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([status])
  @@index([scheduledAt])
}

// ============================================
// BLOG & CONTENT
// ============================================

model BlogPost {
  id            String        @id @default(cuid())
  title         String
  slug          String        @unique
  excerpt       String?       @db.VarChar(500)
  content       String        @db.LongText

  // Media
  coverImage    String?
  featuredImage String?
  images        Json?

  // SEO
  metaTitle     String?
  metaDesc      String?       @db.Text
  keywords      Json?         // Array of keywords

  // Categorization
  categoryId    String?
  category      BlogCategory? @relation(fields: [categoryId], references: [id])
  tags          Json?         // Array of tag strings

  // Author
  authorId      String
  author        User          @relation(fields: [authorId], references: [id])

  // Publishing
  status        String        @default("draft") // draft, published, scheduled, archived
  publishedAt   DateTime?
  scheduledAt   DateTime?

  // Stats
  viewCount     Int           @default(0)

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([slug])
  @@index([status])
  @@index([authorId])
  @@index([categoryId])
  @@index([publishedAt])
}

model BlogCategory {
  id          String     @id @default(cuid())
  name        String
  slug        String     @unique
  description String?    @db.Text

  posts       BlogPost[]

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([slug])
}

// ============================================
// REVIEWS & RATINGS
// ============================================

model Review {
  id          String   @id @default(cuid())
  productId   String
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  userId      String

  rating      Int
  title       String?
  comment     String?  @db.Text
  verified    Boolean  @default(false)
  approved    Boolean  @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([productId])
  @@index([userId])
  @@index([approved])
}

// ============================================
// CONTENT MANAGEMENT
// ============================================

model Page {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  content     String   @db.LongText
  metaTitle   String?
  metaDesc    String?  @db.Text
  active      Boolean  @default(true)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
}

// ============================================
// MEDIA LIBRARY
// ============================================

enum MediaType {
  IMAGE
  DOCUMENT
  STL_FILE
  OTHER
}

model Media {
  id          String    @id @default(cuid())
  name        String
  url         String
  type        MediaType
  size        Int       // in bytes
  mimeType    String
  alt         String?
  caption     String?   @db.Text

  // R2 specific
  key         String    @unique
  bucket      String

  createdAt   DateTime  @default(now())

  @@index([type])
  @@index([key])
}

// ============================================
// SETTINGS
// ============================================

model Setting {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String   @db.Text
  description String?  @db.Text

  updatedAt   DateTime @updatedAt

  @@index([key])
}

// ============================================
// ANALYTICS & TRACKING
// ============================================

model PageView {
  id          String   @id @default(cuid())
  path        String
  visitorId   String   // Anonymous visitor identifier (stored in cookie)
  sessionId   String   // Session identifier
  userAgent   String?  @db.Text
  ip          String?
  referrer    String?  @db.Text
  country     String?
  city        String?
  device      String?  // desktop, mobile, tablet
  browser     String?
  os          String?
  duration    Int?     // Time spent on page in seconds

  createdAt   DateTime @default(now())

  @@index([path])
  @@index([visitorId])
  @@index([sessionId])
  @@index([createdAt])
}

model Visitor {
  id          String   @id @default(cuid())
  visitorId   String   @unique // Cookie-based identifier
  firstVisit  DateTime @default(now())
  lastVisit   DateTime @default(now())
  totalVisits Int      @default(1)
  userId      String?  // Link to User if logged in

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([visitorId])
  @@index([lastVisit])
}

model ActiveSession {
  id          String   @id @default(cuid())
  sessionId   String   @unique
  visitorId   String
  lastActive  DateTime @default(now())
  currentPage String?
  startedAt   DateTime @default(now())

  // Geolocation data
  ip          String?
  country     String?
  countryCode String?
  region      String?
  city        String?
  latitude    Float?
  longitude   Float?

  @@index([lastActive])
  @@index([visitorId])
}

model AbandonedCart {
  id          String   @id @default(cuid())
  visitorId   String
  sessionId   String?
  email       String?  // If captured
  items       Json     // Cart items snapshot
  totalValue  Decimal  @db.Decimal(10, 2)
  recoveredAt DateTime? // If cart was recovered

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([visitorId])
  @@index([email])
  @@index([createdAt])
}

// ============================================
// EMAIL SIGNATURES
// ============================================

model EmailSignature {
  id          String   @id @default(cuid())
  userId      String
  name        String
  content     String   @db.Text
  isDefault   Boolean  @default(false)
  forAddress  String?  // Optional: specific email address this signature is for

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([forAddress])
}

// ============================================
// SHIPPING CONFIGURATION
// ============================================

model ShippingZone {
  id          String         @id @default(cuid())
  name        String
  countries   Json           // Array of country codes ["US", "CA"]
  states      Json?          // Array of state codes for US/CA ["CA", "NY"]
  zipCodes    String?        @db.Text // Comma-separated or range "90000-90999,91000"
  active      Boolean        @default(true)
  priority    Int            @default(0) // Higher = checked first

  rates       ShippingRate[]

  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@index([active])
}

model ShippingRate {
  id              String       @id @default(cuid())
  zoneId          String
  zone            ShippingZone @relation(fields: [zoneId], references: [id], onDelete: Cascade)

  name            String       // "Standard", "Express", "Overnight"
  description     String?
  minOrderValue   Decimal?     @db.Decimal(10, 2) // Min cart value for this rate
  maxOrderValue   Decimal?     @db.Decimal(10, 2) // Max cart value for this rate
  minWeight       Decimal?     @db.Decimal(10, 2) // Min weight in lbs
  maxWeight       Decimal?     @db.Decimal(10, 2) // Max weight in lbs

  // Pricing
  baseRate        Decimal      @db.Decimal(10, 2) // Base shipping cost
  perItemRate     Decimal      @db.Decimal(10, 2) @default(0) // Additional per item
  perPoundRate    Decimal      @db.Decimal(10, 2) @default(0) // Additional per lb
  freeShippingMin Decimal?     @db.Decimal(10, 2) // Free shipping threshold

  // Delivery estimate
  minDays         Int          @default(3)
  maxDays         Int          @default(7)

  // Carrier info (for label purchasing)
  carrier         String?      // USPS, UPS, FedEx, DHL
  serviceCode     String?      // e.g., "usps_priority", "ups_ground"

  active          Boolean      @default(true)
  sortOrder       Int          @default(0)

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([zoneId])
  @@index([active])
}

// ============================================
// TAX CONFIGURATION
// ============================================

model TaxRate {
  id              String   @id @default(cuid())
  name            String   // "California Sales Tax"
  country         String   @default("US")
  state           String?  // State code (e.g., "CA")
  zipCode         String?  // Specific zip or range
  city            String?  // Specific city

  rate            Decimal  @db.Decimal(6, 4) // Tax rate as decimal (0.0825 = 8.25%)
  isCompound      Boolean  @default(false) // Applied on top of other taxes?
  includeShipping Boolean  @default(false) // Tax shipping?

  priority        Int      @default(0) // Order of application
  active          Boolean  @default(true)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([country, state])
  @@index([active])
}

// ============================================
// SHIPPING LABELS & TRACKING
// ============================================

enum LabelStatus {
  PENDING
  PURCHASED
  VOIDED
  USED
}

model ShippingLabel {
  id              String      @id @default(cuid())
  orderId         String

  // Label details
  trackingNumber  String?
  carrier         String      // USPS, UPS, FedEx, DHL
  service         String      // Service name

  // Costs
  labelCost       Decimal     @db.Decimal(10, 2)
  insuranceCost   Decimal     @db.Decimal(10, 2) @default(0)
  totalCost       Decimal     @db.Decimal(10, 2)

  // Package details
  weight          Decimal     @db.Decimal(10, 2) // in lbs
  length          Decimal?    @db.Decimal(10, 2) // inches
  width           Decimal?    @db.Decimal(10, 2)
  height          Decimal?    @db.Decimal(10, 2)

  // Label files
  labelUrl        String?     @db.Text // URL to PDF/PNG
  labelData       String?     @db.LongText // Base64 encoded label

  // Provider reference
  providerLabelId String?     // ID from shipping provider (EasyPost, Shippo, etc.)
  providerData    Json?       // Full response from provider

  // Status
  status          LabelStatus @default(PENDING)
  purchasedAt     DateTime?
  voidedAt        DateTime?

  // From/To addresses (snapshot)
  fromAddress     Json
  toAddress       Json

  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  @@index([orderId])
  @@index([trackingNumber])
  @@index([status])
}

// ============================================
// EMAIL AUDIT LOG
// ============================================

model EmailLog {
  id          String   @id @default(cuid())

  // Who sent it (admin user)
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  userName    String   // Snapshot of user name at time of send

  // Email details
  fromAddress String   // e.g., support@47industries.com
  toAddress   String
  ccAddress   String?
  bccAddress  String?
  subject     String

  // Optional: store message ID from Zoho for reference
  zohoMessageId String?

  // Status
  status      String   @default("sent") // sent, failed
  error       String?  @db.Text

  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([fromAddress])
  @@index([createdAt])
}
